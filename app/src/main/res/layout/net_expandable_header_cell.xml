<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LIST_HEADER"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/GUID_TXT"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/PARENT_LL"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/img_btn_size"
            android:layout_marginRight="@dimen/img_btn_size"
            android:layout_toRightOf="@+id/ROUND_TXT_LAY"
            android:layout_toLeftOf="@+id/ARROW_CLICK_IMG"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CLASS_BOARD_TXT"
                style="@style/note_normal_black_bold_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.40"
                android:gravity="center|left" />

            <TextView
                android:id="@+id/CHAPTER_RECORDING_TXT"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.60"
                android:layout_marginRight="@dimen/pot_cell_margin"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:textColor="@color/text_body"
                android:textSize="13.5sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ARROW_CLICK_IMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/downarrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/small_text_size"
        android:layout_marginLeft="@dimen/small_text_size"
        android:layout_alignParentBottom="true"
        android:background="@color/lighter_grey"/>

</LinearLayout>