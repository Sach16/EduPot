<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HOME_CLASS_MAIN_LAYOUT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/RIGHT_SYLLABUS_HELP_LL"
        android:paddingLeft="@dimen/margin_med_large"
        android:paddingRight="@dimen/margin_med_large">

        <TextView
            android:id="@+id/ALLERT_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med_large"
            android:background="@android:color/transparent"
            android:text="@string/syllabus_consists_of_the_your_boards_classes_txt"
            android:gravity="top|left"
            android:textColor="@color/text_heading"
            android:textCursorDrawable="@drawable/cursor_accent"
            android:textSize="@dimen/sub_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RIGHT_SYLLABUS_HELP_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/RIGHT_SYLLABUS_HELP_TXT"
            style="@style/clikable_warm_txt"
            android:layout_weight="1"
            android:background="@color/white_two"
            android:gravity="center"
            android:paddingBottom="@dimen/mid_lar_text_size"
            android:paddingTop="@dimen/mid_lar_text_size"
            android:text="@string/i_need_syllabus_help_txt"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</RelativeLayout>