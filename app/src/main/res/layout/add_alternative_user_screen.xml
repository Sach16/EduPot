<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MAIN_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pot_cell_margin"
        android:layout_marginRight="@dimen/pot_cell_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_high"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FIRST_NAME_LABEL_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Id"
                android:textColor="@color/text_body"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/USER_ID_EDIT"
                style="@style/grey_bold_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_view_end_margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LAST_NAME_LABEL_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/text_body"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/PASS_EDIT"
                style="@style/grey_bold_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med_large"
            android:layout_marginTop="@dimen/margin_med_large">

            <TextView
                android:id="@+id/CANCEL_DIALOG_TXT"
                style="@style/clikable_warm_txt"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="@string/cancel_txt"
                android:textColor="@color/warm_grey" />

            <TextView
                android:id="@+id/DONE_DIALOG_TXT"
                style="@style/clikable_warm_txt"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/done_txt"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>