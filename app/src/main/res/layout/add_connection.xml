<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RL_MAIN"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/SV_MAIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/SAVE_CANCEL_LL">

        <LinearLayout
            android:id="@+id/HEADER_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User ID :"
                android:textColor="@color/text_body"
                android:textSize="@dimen/mid_lar_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/USER_ID_EDIT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_heading"
                        android:textSize="@dimen/mid_lar_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/darker_gray" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/clickable_txt_blue"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="(OR)"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone Number :"
                android:textColor="@color/text_body"
                android:textSize="@dimen/mid_lar_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TERMS_AND_CONDITION_NUMB"
                            style="@style/note_normal_txt"
                            android:text="@string/prefix_numb" />

                        <EditText
                            android:id="@+id/PHONE_NUMBER_EDIT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@android:color/transparent"
                            android:digits="@string/numeric"
                            android:gravity="center|left"
                            android:imeOptions="actionDone"
                            android:textCursorDrawable="@drawable/cursor_accent"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:padding="5dp"
                            android:textSize="@dimen/sub_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/darker_gray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ADDNAL_INFO_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="First Name :"
                    android:textColor="@color/text_body"
                    android:textSize="@dimen/mid_lar_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/FIRST_NAME_EDIT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_heading"
                            android:textSize="@dimen/mid_lar_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Last Name :"
                    android:textColor="@color/text_body"
                    android:textSize="@dimen/mid_lar_text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/LAST_NAME_EDIT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_heading"
                            android:textSize="@dimen/mid_lar_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Role :"
                    android:textColor="@color/text_body"
                    android:textSize="@dimen/mid_lar_text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ROLE_TXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:gravity="center|left"
                            android:maxLines="1"
                            android:textColor="@color/text_heading"
                            android:textSize="@dimen/sub_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CANCEL_TXT"
                    style="@style/clickable_txt_grey"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:text="@string/cancel_txt"
                    android:textSize="@dimen/sub_text_size" />

                <TextView
                    android:id="@+id/ADD_CONNECTION_TXT"
                    style="@style/clickable_txt_Accent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:text="@string/add_connection_txt"
                    android:textSize="@dimen/sub_text_size" />

            </RelativeLayout>-->

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/SAVE_CANCEL_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/CANCEL_TXT"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="@dimen/mid_lar_text_size"
            android:layout_weight="1"
            android:background="@color/white_two"
            android:gravity="center"
            android:paddingBottom="@dimen/tab_text_size"
            android:paddingTop="@dimen/tab_text_size"
            android:text="@string/cancel_txt"
            android:textColor="@color/warm_grey" />

        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/white_three" />

        <TextView
            android:id="@+id/ADD_CONNECTION_TXT"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="@dimen/mid_lar_text_size"
            android:layout_weight="1"
            android:background="@color/white_two"
            android:gravity="center"
            android:paddingBottom="@dimen/tab_text_size"
            android:paddingTop="@dimen/tab_text_size"
            android:text="@string/add_connection_txt"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</RelativeLayout>