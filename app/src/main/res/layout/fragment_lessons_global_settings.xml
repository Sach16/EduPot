<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MAIN_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pot_cell_margin"
        android:layout_marginRight="@dimen/pot_cell_margin"
        android:orientation="vertical">

        <TextView
            style="@style/clickable_txt_Accent"
            android:layout_marginTop="@dimen/margin_med_large"
            android:gravity="top|left"
            android:text="@string/lesson_settings_txt"
            android:textColor="@color/text_heading"
            android:textSize="@dimen/sub_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ALLOW_SHARES_TXT"
                style="@style/title_medium"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:text="@string/allow_shares_txt"
                android:textSize="@dimen/sub_text_size" />

            <Switch
                android:id="@+id/SHARES_SWITCH"
                style="@style/clickable_txt_Accent"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:checked="true"
                android:textSize="@dimen/sub_text_size" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ALLOW_OFFLINE_TXT"
                style="@style/title_medium"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:text="@string/allow_offline_save_txt"
                android:textSize="@dimen/sub_text_size" />

            <Switch
                android:id="@+id/OFFLINE_SWITCH"
                style="@style/clickable_txt_Accent"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:checked="true"
                android:textSize="@dimen/sub_text_size" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>