<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MAIN_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pot_cell_margin"
        android:layout_marginRight="@dimen/pot_cell_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ALLOW_SHARES_TXT"
                style="@style/clickable_txt_grey"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:text="@string/allow_shares_txt"
                android:textSize="@dimen/sub_text_size" />

            <Switch
                android:id="@+id/SHARES_SWITCH"
                style="@style/clickable_txt_Accent"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:textSize="@dimen/sub_text_size" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ALLOW_OFFLINE_TXT"
                style="@style/clickable_txt_grey"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:text="@string/allow_offline_save_txt"
                android:textSize="@dimen/sub_text_size" />

            <Switch
                android:id="@+id/OFFLINE_SWITCH"
                style="@style/clickable_txt_Accent"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:textSize="@dimen/sub_text_size" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>